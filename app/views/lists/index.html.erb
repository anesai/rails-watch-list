<p style="color: green"><%= notice %></p>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our lists</h1>
    </div>
  </div>
  <div class="list-grid">
    <% @lists.each do |list| %>
      <%= render list %>
    <% end %>
  </div>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-outline-primary float-right" %>
</div>
